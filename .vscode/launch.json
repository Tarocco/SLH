    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Standalone SLHBot (Debug)",
            "type": "mono",
            "request": "launch",
            "cwd": "${workspaceRoot}/SLHBot/bin/Debug",
            "program": "${workspaceRoot}/SLHBot/bin/Debug/SLHBot.exe",
            "args":[
                "--config-file", "slhbot.conf.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        }
    ]
}